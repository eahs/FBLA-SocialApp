<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:about="clr-namespace:FBLASocialApp.Views.About"
       xmlns:home="clr-namespace:FBLASocialApp.Views.Home"       
       xmlns:notification="clr-namespace:FBLASocialApp.Views.Notification"
       xmlns:favorites ="clr-namespace:FBLASocialApp.Views.Favorites"
       xmlns:login="clr-namespace:FBLASocialApp.Views.Login;assembly=FBLASocialApp"
       xmlns:chat="clr-namespace:FBLASocialApp.Views.Chat"
       xmlns:allmembers="clr-namespace:FBLASocialApp.Views.AllMembers"
       xmlns:social="clr-namespace:FBLASocialApp.Views.Social"
       xmlns:wall="clr-namespace:FBLASocialApp.Views.Wall"       
       xmlns:newpost="clr-namespace:FBLASocialApp.Views.NewPost"    
       xmlns:settings="clr-namespace:FBLASocialApp.Views.Settings"
       xmlns:font="clr-namespace:FBLASocialApp.Helpers"
       xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
       Title="FBLASocialApp"
       x:Class="FBLASocialApp.AppShell">

    <!--
        The overall app visual hierarchy is defined here, along with navigation.
    
        https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/shell/
    -->

    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="{StaticResource Cherry-Purple}" />
                <Setter Property="Shell.ForegroundColor" Value="White" />
                <Setter Property="Shell.TitleColor" Value="White" />
                <Setter Property="Shell.DisabledColor" Value="#B4FFFFFF" />
                <Setter Property="Shell.UnselectedColor" Value="#95FFFFFF" />
                <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource Cherry-Purple}" />
                <Setter Property="Shell.TabBarForegroundColor" Value="White"/>
                <Setter Property="Shell.TabBarUnselectedColor" Value="White"/>
                <Setter Property="Shell.TabBarTitleColor" Value="Yellow"/>
            </Style>
            <Style TargetType="TabBar" BasedOn="{StaticResource BaseStyle}" />
            <Style TargetType="FlyoutItem" BasedOn="{StaticResource BaseStyle}" />

            <!--
            Default Styles for all Flyout Items
            https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/shell/flyout#flyoutitem-and-menuitem-style-classes
            -->
            <Style Class="FlyoutItemLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Medium"></Setter>
                <Setter Property="TextColor" Value="{StaticResource Cherry-Purple}"></Setter>
            </Style>
            <Style Class="FlyoutItemLayoutStyle" TargetType="Layout" ApplyToDerivedTypes="True">
                <Setter Property="BackgroundColor" Value="{StaticResource Cherry-Purple}"></Setter>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="White" />
                                    <Setter TargetName="FlyoutItemLabel" Property="Label.TextColor" Value="{StaticResource Cherry-Purple}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Selected">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#ffc324" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <!--
            Custom Style you can apply to any Flyout Item
            -->
            <Style Class="MenuItemLayoutStyle" TargetType="Layout" ApplyToDerivedTypes="True">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter TargetName="FlyoutItemLabel" Property="Label.TextColor" Value="{StaticResource Cherry-Purple}" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <!-- 
        When the Flyout is visible this defines the content to display in the flyout.
        FlyoutDisplayOptions="AsMultipleItems" will create a separate flyout item for each child element    
        https://docs.microsoft.com/dotnet/api/xamarin.forms.shellgroupitem.flyoutdisplayoptions?view=xamarin-forms
    -->

    <FlyoutItem Title="Home" Route="Yakka">
        <FlyoutItem.Icon>
            <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.Home}"
                Color="Black"
                Size="24"
                />
        </FlyoutItem.Icon>
        <Tab Title="Home" Route ="Home">
            <Tab.Icon>
                <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.Home}"
                Color="Black"
                Size="24"
                />
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate home:HomePage}" />
        </Tab>
        <Tab Title="Favorites" Route="Favorites">
            <Tab.Icon>
                <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.Heart}"
                Color="Black"
                Size="24"
                />
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate favorites:FavoritesPage}" />
        </Tab>
        <Tab Title="New Post" Route="NewPost">
            <Tab.Icon>
                <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.PlusCircle}"
                Color="Black"
                Size="24"
                />
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate newpost:NewPostPage}" />
        </Tab>
        <Tab Title="My Wall" Route="MyWall">
            <Tab.Icon>
                <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.Newspaper}"
                Color="Black"
                Size="24"
                />
            </Tab.Icon>

            <ShellContent ContentTemplate="{DataTemplate social:UserStoryPage}" />
        </Tab>
        <Tab Title="Chat" Route="Chat">
            <Tab.Icon>
                <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.Comment}"
                Color="Black"
                Size="24"
                />
            </Tab.Icon>

            <ShellContent ContentTemplate="{DataTemplate chat:RecentChatPage}" />
        </Tab>
    </FlyoutItem>


        <FlyoutItem Title="Notifications" Route="Notifications">
        <FlyoutItem.Icon>
            <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.ExclamationCircle}"
                Color="Black"
                Size="24"
                />
        </FlyoutItem.Icon>

        <Tab Title="Notifications" Icon="tab_about.png">
            <ShellContent ContentTemplate="{DataTemplate notification:NotificationPage}" />
        </Tab>
    </FlyoutItem>

    <MenuItem Text="Chat" Clicked="Chat_Clicked">
        <MenuItem.IconImageSource>
            <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.Comment}"
                Color="Black"
                Size="24"
                />
        </MenuItem.IconImageSource>
    </MenuItem>


    <MenuItem Text="Favorites" Clicked="Favorites_Clicked">
        <MenuItem.IconImageSource>
            <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.Heart}"
                Color="Black"
                Size="24"
                />
        </MenuItem.IconImageSource>
    </MenuItem>

    <MenuItem Text="My Wall" Clicked="MyWall_Clicked">
        <MenuItem.IconImageSource>
            <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.Newspaper}"
                Color="Black"
                Size="24"
                />
        </MenuItem.IconImageSource>
    </MenuItem>

    <MenuItem Text="New Post" Clicked="NewPost_Clicked">
        <MenuItem.IconImageSource>
            <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.PlusCircle}"
                Color="Black"
                Size="24"
                />
        </MenuItem.IconImageSource>
    </MenuItem>

    <FlyoutItem Title="Settings" Route="Settings">
        <FlyoutItem.Icon>
            <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.Cog}"
                Color="Black"
                Size="24"
                />
        </FlyoutItem.Icon>

        <Tab Title="Settings" Icon="tab_about.png">
            <ShellContent ContentTemplate="{DataTemplate settings:SettingPage}" />
        </Tab>
    </FlyoutItem>


    <MenuItem Text="Logout" StyleClass="MenuItemLayoutStyle" Clicked="Logout_Clicked">
        <MenuItem.IconImageSource>
            <FontImageSource
                FontFamily="{StaticResource LineAwesomeFont}"
                Glyph="{x:Static font:LineAwesome.AlternateSignOut}"
                Color="Black"
                Size="24"
                />
        </MenuItem.IconImageSource>
    </MenuItem>

    <!--
        This defines content that won't show up in a flyout menu. When this content is active the flyout menu won't be available.
        This is useful for creating areas of the application where you don't want users to be able to navigate away from.
        If you would like to navigate to this content you can do so by calling
        await Shell.Current.GoToAsync("//LoginPage");
    -->
    <ShellContent Route="Login" Shell.NavBarIsVisible="False" Shell.FlyoutBehavior="Disabled" ContentTemplate="{DataTemplate login:LoginPage}" />
    <ShellContent Route="ResetPassword" Shell.NavBarIsVisible="False" Shell.FlyoutBehavior="Disabled" ContentTemplate="{DataTemplate login:ResetPasswordPage}" />
    <ShellContent Route="ChangePassword" Shell.NavBarIsVisible="False" Shell.FlyoutBehavior="Flyout" ContentTemplate="{DataTemplate login:ResetPasswordPage}" />
    <ShellContent Route="SignUp" Shell.NavBarIsVisible="False" Shell.FlyoutBehavior="Disabled" ContentTemplate="{DataTemplate login:SignUpPage}" />
    <ShellContent Route="Privacy"  Shell.NavBarIsVisible="False" Shell.FlyoutBehavior="Disabled" ContentTemplate="{DataTemplate settings:PrivacyPage}" />
    <ShellContent Route="Terms"   Shell.NavBarIsVisible="False" Shell.FlyoutBehavior="Disabled" ContentTemplate="{DataTemplate settings:TermsPage}" />
    <ShellContent Route="Social" Shell.NavBarIsVisible="True" Shell.FlyoutBehavior="Flyout" Shell.BackgroundColor ="{StaticResource Cherry-Purple}" ContentTemplate="{DataTemplate social:UserStoryPage}" />
    <ShellContent Route="AllMembers" Shell.NavBarIsVisible="False" Shell.FlyoutBehavior="Disabled" ContentTemplate="{DataTemplate allmembers:AllMembersPage}" />
    <!-- Optional Templates 
    // These may be provided inline as below or as separate classes.

    // This header appears at the top of the Flyout.
    // https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/shell/flyout#flyout-header
    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid>ContentHere</Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    // ItemTemplate is for ShellItems as displayed in a Flyout
    // https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/shell/flyout#define-flyoutitem-appearance
    <Shell.ItemTemplate>
        <DataTemplate>
            <ContentView>
                Bindable Properties: Title, Icon
            </ContentView>
        </DataTemplate>
    </Shell.ItemTemplate>

    // MenuItemTemplate is for MenuItems as displayed in a Flyout
    // https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/shell/flyout#define-menuitem-appearance
    <Shell.MenuItemTemplate>
        <DataTemplate>
            <ContentView>
                Bindable Properties: Text, Icon
            </ContentView>
        </DataTemplate>
    </Shell.MenuItemTemplate>

    -->
    <Shell.FlyoutHeaderTemplate>
    <DataTemplate>
            <Grid BackgroundColor="#7A0646"
                  HeightRequest="100"
                  Padding="10,5,10,10"
                  >
                <Frame BackgroundColor="Transparent">
                    <ffimageloadingsvg:SvgCachedImage Source="YakkaLogoWhiteText.svg" HorizontalOptions="StartAndExpand"/>
                </Frame>
            </Grid>
    </DataTemplate>
    </Shell.FlyoutHeaderTemplate>
</Shell>
